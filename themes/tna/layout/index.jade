-
  activities = site.posts.filter(x => x.class == 'Activity')
  activities.data = activities.data.sort((a, b) => b.start_time - a.start_time)

  games = site.posts
    .filter(x => x.class === 'Game')
    .filter(x => x.display !== 'none')

  runners = site.posts
    .filter(x => x.class == 'Runner')
  runners.data = runners.data.sort((a, b) => a.name > b.name ? 1 : -1)

.site
  .logo
    img(src='/img/tna-logo.png')
  .title
    h1.t T.N.A.
    h5.desc Speedrun, Together Not Alone

.row
  .col-3
    h3 
      i.fa.fa-rocket
      span 活动 Activities
    section.activities
      - activities.forEach((item, index) => {
        != partial('_item/ActivityItem', { item })
      - })
      
  .col-9
    h3 
      i.fa.fa-gamepad
      span 游戏 Games
    section.games
      - games.forEach((item, index) => {
        != partial('_item/GameItem', { item })
      - })

    h3 
      i.fa.fa-user-circle-o
      span 玩家 Runners
    section.runners
      - runners.forEach((item, index) => {
        != partial('_item/RunnerItem', { item })
      - })

