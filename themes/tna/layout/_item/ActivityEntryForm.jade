- function tdgame(x)
  if (!!!x._game)
    td.blank
  else
    != partial('_table/td-game', { _game: x._game })

.doing(style='text-align:center;margin-bottom:2rem;')= activity.runners_blank

.last-update(style='text-align:center;margin-bottom:2rem;')
  span 最后更新时间：
  span= last_update

.activity-schedule.entry-form
  .table-responsive
    table.table.table-dark.table-striped
      thead
        tr
          th 报名人
          th 游戏
          th 规则
          th 预计时间
      tbody
        - applying.forEach(x => {
          tr
            td
              = x._runner
            = tdgame(x)
            td.rule
              .r= x._rule
              if (x._rule_sub)
                .rule.sub= x._rule_sub
            td
              = x._est
        - })