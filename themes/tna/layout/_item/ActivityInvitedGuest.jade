.activity-schedule.invited-guest
  .table-responsive
    table.table.table-dark.table-striped
      thead
        tr
          th 邀请 Runner
          th 游戏
          th 规则
          th 预计时间
      tbody
        - invited_guest.forEach(x => {
          tr
            td
              = x._runner
            td
              - if (typeof(x._game) === 'string')
                .game= x._game
              - else
                - for (_g of x._game)
                  .game= _g

            td
              = x._rule
            td
              = x._est
        - })