@import "_variables"
@import "_base"
@import "_class/_activity"
@import "_class/_runner"
@import "_class/_game"
@import "_class/_blog"

@import "_header"
@import "_index-header"
@import "_content"

@import "_utils/icon-links"


h1, h2, h3, h4, h5, h6
  font-weight 300
  &.light
    text-shadow $titleTextShadow
  i
    margin-right 1rem
    opacity 0.6
  &.tfont
    font-family $fontTitle
    
h3
  span.sub
    opacity 0.6
    font-size 28px * 0.6
    
a.link
  link()
  
.titlefont
  font-family $fontTitle
  
.page-alert
  borderBox()
  margin-bottom 1rem
  .alert-text
    padding 1rem
    background-color rgba(black, 0.1)
    .p
      font-size 14px
      opacity 0.8
  
table.table
  margin-bottom 0
  color white
  background-color rgba(black, 0.4)
  font-size 14px
  th, td
    border 0 none
  th
    padding 6px
    color $goldenColor
    white-space nowrap
  td
    box-sizing content-box
    padding 6px
    line-height 21px
  td .tdi
    display flex
    align-items center
    min-height 32px
    
  td a.rr
    $c = $mainColor1
    color $c
    border-bottom dashed 1px $c
    
  $imgw = 42px
  td.td-game
    .tdi
      display flex
      flex-direction column
      align-items flex-start
      justify-content center
      .game
        margin-bottom 6px
        &:last-child
          margin-bottom 0
      .game.nodata
        padding-left $imgw + 6px
      .game.data
        display flex
        align-items center
        img
          width $imgw
          height $imgw
          border-radius 6px
        .info
          margin-left 6px
          .oname
            opacity 0.6
            font-size 14px
  
  $avatarw = 32px     
  td.td-runner
    overflow hidden
    vertical-align middle
    .tdi
      min-height $avatarw
      margin-bottom 0.5rem
      &:last-child
        margin-bottom 0
    .rr
      display flex
      align-items center
      img.avatar
        width $avatarw
        height $avatarw
        border-radius 100px
        margin-right 0.5rem
        transition border-radius .3s ease, transform .3s ease
    a.rr
      span.name
        // $c = lighten($mainColor1, 20%)
        $c = $mainColor1
        color $c
        border-bottom dashed 1px $c
      &:hover
        span.name
          color lighten($linkColor, 20%)
        img.avatar
          border-radius 0px
          transform rotate(720deg)   

span.tag
  font-size 12px
  background-color rgba(white, 0.2)
  padding 0 10px
  border-radius 100px
  white-space nowrap
  color white

body.site
  display flex
  min-height 100vh
  flex-direction column
          
  $hh = 48px
  > .footer
    borderBox()
    border-width 1px 0 0 0
    padding 3px 0 0 0
    .bbox
      height $hh
      background-color rgba(black, 0.3)
      &.center
        display flex
        align-items center
        justify-content center
        h5
          margin-top 3px
          margin-bottom 0
          line-height 1

  > .container
    padding-top 2rem
    position relative
    flex 1
    
    section
      margin-bottom 2rem
      
    &.index-page
      section.activities h3
      section.recently h3
        display flex
        align-items flex-end
        &::before
          content ''
          width 72px * (2 / 4)
          height 72px * (2 / 4)
          background url('http://img4ye.oss-cn-hangzhou.aliyuncs.com/tna/utils/celeste-blue-heart.png') no-repeat
          // 72 x 72 4px/pixel
          background-size cover
          margin-right 0.5rem
          position relative
        .sub 
          margin-left 0.5rem
          position relative
      h3
        margin-bottom 2rem