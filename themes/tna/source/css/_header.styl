body.site
  $hh = 48px
  > .header
    // height $hh
    borderBox()
    border-width 0 0 1px 0
    padding 0 0 3px 0
    .bbox
      height $hh
      background-color rgba(black, 0.3)
      &.center
        display flex
        align-items center
        justify-content center
        
        a.hl
          font-size 18px
          display flex
          align-items center
          border 0 none
          height 100%
          padding 0 1rem
          &:hover
            background-color rgba(white, 0.1)
            
        a.hl.site-title
          font-size 20px
          font-family $fontTitle
          span
            position relative
            top 20px * 0.15
          &::before
            content ''
            background-image url('http://img4ye.oss-cn-hangzhou.aliyuncs.com/tna/utils/terraria-campfire-46-32.gif')
            background-size cover
            // 46 x 32 2px/grid
            width 46px * (1.5 / 2)
            height 32px * (1.5 / 2)
            margin-right 0.5rem
            
        a.hl.runners
          // &::before
          //   content ''
          //   width 48px * (2 / 4)
          //   height 48px * (2 / 4)
          //   background-image url('http://img4ye.oss-cn-hangzhou.aliyuncs.com/tna/utils/celeste-jump-point.png')
          //   // 48 x 48 4px/grid
          //   background-size cover
          //   margin-right 0.5rem
          &::before
            content ''
            width 64px * (2 / 4)
            height 64px * (2 / 4)
            background-image url('http://img4ye.oss-cn-hangzhou.aliyuncs.com/tna/utils/rockman-pixel-64-64-4.png')
            // 48 x 48 4px/grid
            background-size cover
            margin-right 0.5rem