@keyframes animUD
  0%
    transform translateY(0px)
  25%
    transform translateY(-32px)
  50%
    transform translateY(0px)
  75%
    transform translateY(32px)
  100%
    transform translateY(0px)
    
@keyframes animLR
  0%
    left 0px
  25%
    left -32px
  50%
    left 0px
  75%
    left 32px
  100%
    left 0px

img.mario-land
  position relative
  animation animUD 10s linear infinite, animLR 13s linear infinite

body.site
  > .index-header
    background-color rgba(black, 0.3)
    // background radial-gradient(ellipse at bottom, #1b2735 0%, #090a0f 100%)
    min-height 15rem
    border-bottom solid 1px rgba(white, 0.4)
    display flex
    align-items center
    position relative
    overflow hidden
    .image
      display flex
      justify-content center
      align-items center
    .info
      flex-direction column
      display flex
      justify-content center
      white-space nowrap
      .title
        text-shadow 0 0 20px #01b0ff, 0 0 10px #fff
        font-size 48px
        font-family $fontTitle
      .subtitle
        font-size 24px
        font-family $fontTitle
        opacity 0.6
        // margin-left 2rem
      .desc
        font-size 24px
        // margin-left 2rem
        opacity 0.6
        
    // @media $md
    @media $sm
      .image.i2
        display none
      .image.i1
        order 1
        margin-bottom 2rem
        margin-top 2rem
        img
          height 6rem !important
      .info
        order 0
        text-align center
        margin-top 2rem
        .title
          font-size 36px
        .subtitle, .desc
          font-size 18px