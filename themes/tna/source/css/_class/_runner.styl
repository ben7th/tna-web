$w = 150px 
$cw = 60px

.item.runner
  display block
  width $w
  height $w
  background-color rgba(white, 0.1)
  margin-right 12px
  margin-bottom 12px
  transition background-color 0.3s
  border-radius 6px
  &:hover
    background-color rgba(white, 0.2)
    
  .cover
    width $w
    padding 18px 0 12px
    display flex
    align-items center
    justify-content center
    img
      max-width $cw
      max-height $cw 
      border-radius $cw
  .info
    // font-family: $fontTitle
    text-align center
    .nickname
      font-size 14px
      opacity 0.6
      
.runners-page
  margin-bottom 2rem
  h3
    margin-bottom 1rem
  .tbox
    borderBox()     

.RunnerPage
  .runner-side, .runner-main
    height 100%
    borderBox()
    .bbox
      height 100%
  
  @media $sm
    .runner-side, .runner-main
      height auto
  
  .runner-side
    margin-bottom 1rem
    .bbox
      background-color rgba(white, 0.1)
    .ritem
      padding 1rem
      display flex
      justify-content center
      border-bottom dashed 1px rgba($mainColor1, 0.5)
      background-color rgba(black, 0.1)
      .page-item
        .avatar
          margin-top 1rem
          margin-bottom 1rem
          display flex
          align-items center
          justify-content center
          img
            width 128px
            height 128px
            border-radius 100px
        .info
          .name
            text-align center
          .nickname
            text-align center
            opacity 0.6
          .desc
            margin-top 1rem
            font-size 14px
            opacity 0.6
            margin-bottom 1rem
            word-break break-all
        
  .runner-main // 临时样式
    .rdetail
      margin -1rem -1rem 0
      .rd
        padding 1rem
        border-bottom dashed 1px rgba($mainColor1, 0.5)
        &:last-child
          margin-bottom 0
          border-bottom 0 none
        h6
          font-size 20px
        .tags
          margin-top 1rem
          .tag
            font-size 14px
            padding 3px 12px
        
