        //     border-radius 0px
        //     transform rotate(720deg)          

.RunnerPage
  .runner-side, .runner-main
    height 100%
    borderBox()
    .bbox
      height 100%
  
  .runner-side
    .bbox
      background-color rgba(white, 0.1)
    .ritem
      padding 1rem
      display flex
      justify-content center
      border-bottom dashed 1px rgba($mainColor1, 0.5)
      .item
        // cursor default
        background-color transparent
        margin 0
    .rdetail
      padding 1rem
      .rd
        margin-bottom 1rem
        &:last-child
          margin-bottom 0
        .tag
          font-size 14px
          padding 3px 12px
          
  .runner-main
    .bbox
      background-color transparent
      display flex
      flex-direction column
      .rhead
        background-color rgba(black, 0.2)
        border-bottom dashed 1px rgba($mainColor1, 0.5)
        padding 0.5rem 1rem
        .t
          font-size 24px
      .rbody
        padding 1rem
        background-color rgba(black, 0.3)
        flex 1