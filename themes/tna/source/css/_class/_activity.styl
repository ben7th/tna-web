state()
  font-size 16px
  font-family $fontTitle
  &.incoming
    border-color $goldenColor
    color $goldenColor
  &.completed
    border-color $mainColor1
    opacity 0.5

.index-activities
  .item.activity
    display block
    margin-bottom 1rem
    .obox
      border solid 1px rgba(white, 0.4)
      padding 3px
    .ibox
      border-left solid 6px rgba($mainColor1, 0.6)
      background-color rgba(white, 0.1)
      position relative

    &:hover .ibox
      background-color rgba(white, 0.2)

    .code
      padding 0.5rem 1rem
      margin-bottom 0.5rem
      border-bottom dashed 1px rgba($mainColor1, 0.5)
      font-size 24px
      font-family $fontTitle
      display flex
      align-items flex-end
      white-space nowrap
      flex-wrap wrap
      span.c
        position relative
        top 24px * 0.2
        flex 1
      span.state
        state()
        
    .info
      padding 0.5rem 1rem
      font-size 16px
      opacity 0.6
      .date
        font-family $fontTitle


.activity-page
  $imgw = 42px
  
  section
    margin-bottom 6rem !important
    h3 
      text-align center
      margin-bottom 3rem
      .cn
        font-size 24px
        margin-bottom 1rem
        font-weight normal
      .en
        font-size 24px
        opacity 0.6
        
  section.base
    margin-top 6rem
    text-align center
    .title
      margin-bottom 5rem
      h1
        font-size 96px
        line-height 96px
        margin-bottom 0rem
        text-shadow 0 0 20px #01b0ff, 0 0 10px white
      .name, .date
        font-family $fontTitle
        font-size 18px
        opacity 0.6
        margin-bottom 0.5rem
        // text-shadow 0 0 10px white
        span.gap
          // display inline-block
          // width 1px
          // height 18px
          // background-color white
          margin 0 0.5rem
          opacity 0.5
        // font-weight 300
          
      .state, .state.completed
        display flex
        justify-content center
        margin-top 2rem
        .st
          padding 1rem 0 0.5rem
          border-top solid 3px $mainColor1
          border-bottom solid 3px $mainColor1
          font-family $fontTitle
          font-size 30px
          line-height 30px
          opacity 0.5
      .state.incoming
        .st
          border-top solid 3px rgba($goldenColor, 0.8)
          border-bottom solid 3px rgba($goldenColor, 0.8)
          color $goldenColor
          opacity 1
          text-shadow 0 0 20px $goldenColor
      .logohtml
        margin-top 4rem
        
    .cover
      margin 0 auto
      width 80%
      borderBox()
      .cc
        background-color rgba(black, 0.3)
      img
        width 100%
        
  section.intro
    .freehtml
      margin-left -3px
      margin-right -3px
      margin-bottom 3px
    .introc
      borderBox()
        
  section.video
    .video-player
      borderBox()
      // background-color rgba(#d7ecff, 0.2)
      margin 0 auto
      width 100%
      display flex

      .box
        background-color rgba(black, 0.3)
        width 100%
        padding-bottom 56.25%
        position relative
        height 0
        overflow hidden
        iframe
          position absolute
          top 0
          left 0
          width 100%
          height 100%
          
  .activity-runners
    display flex
    flex-wrap wrap
    justify-content center
  
  .activity-schedule
    borderBox()
    
    $imgw = 42px
    table          
      td
        height $imgw
        white-space nowrap
      tr.day
        td
          height 24px
          background-color rgba($linkColor, 0.382)
          // color orange
          .tdi
            min-height 24px
            justify-content flex-start
            font-family $fontTitle
            text-shadow 0 0 10px black
            padding-left 0.5rem
            i
              margin-right 0.5rem
            span
              position relative
              top 3px
            span.idx
              margin-right 0.5rem
      td.applying
        line-height $imgw
        text-align center
        i.fa
          margin-right 0.5rem
      th.game
        padding-left 12px
      td.start
        .date
          font-size 14px
          opacity 0.6
      td.rule
        .sub
          opacity 0.6
      td.video
        a.bilibili
          link()
          i.fa
            margin-right 3px
        .realtime
          opacity 0.6
    &.entry-form, &.invited-guest
      table
        td
          height auto
    
  .discuss
    text-align center
    a
      border-radius 100px
      padding 1rem 2rem
      background-color rgba(white, 0.2)
      font-size 24px
      &:hover
        background-color rgba(white, 0.4)
      i
        margin-right 1rem