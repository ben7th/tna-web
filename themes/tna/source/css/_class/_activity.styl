state()
  border-top solid 3px $mainColor1
  border-bottom solid 3px $mainColor1
  line-height 0.8
  padding 8px 0 4px
  font-size 16px
  &.incoming
    border-color $goldenColor
    color $goldenColor
  &.completed
    border-color $mainColor1
    opacity 0.5

section.activities
  .item.activity
    position relative
    border-left solid 6px rgba($mainColor1, 0.6)
    padding 12px
    background-color rgba(white, 0.1)
    font-size 20px
    display block
    font-family $fontTitle
    margin-bottom 1rem
    &:hover
      background-color rgba(white, 0.2)
    .code
      margin-bottom 0.5rem
      border-bottom solid 1px rgba($mainColor1, 0.2)
    .name
    .date
      font-size 16px
      opacity 0.6
    .state
      state()
      position absolute
      top 6px
      right 6px


.activity-page
  $imgw = 42px
  
  section
    margin-bottom 6rem !important
    h3 
      text-align center
      margin-bottom 3rem
      .cn
        font-size 24px
        margin-bottom 1rem
        font-weight normal
      .en
        font-size 24px
        opacity 0.6
        
  section.base
    margin-top 6rem
    text-align center
    .title
      margin-bottom 5rem
      h1
        font-size 96px
        line-height 96px
        margin-bottom 0rem
        text-shadow 0 0 20px #01b0ff, 0 0 10px white
      .name, .date
        font-family $fontTitle
        font-size 18px
        opacity 0.6
        margin-bottom 0.5rem
        // text-shadow 0 0 10px white
        span.gap
          // display inline-block
          // width 1px
          // height 18px
          // background-color white
          margin 0 0.5rem
          opacity 0.5
        // font-weight 300
          
      .state, .state.completed
        display flex
        justify-content center
        margin-top 2rem
        .st
          padding 1rem 0 0.5rem
          border-top solid 3px $mainColor1
          border-bottom solid 3px $mainColor1
          font-family $fontTitle
          font-size 30px
          line-height 30px
          opacity 0.5
      .state.incoming
        .st
          border-top solid 3px rgba($goldenColor, 0.8)
          border-bottom solid 3px rgba($goldenColor, 0.8)
          color $goldenColor
          opacity 1
          text-shadow 0 0 20px $goldenColor
      .logohtml
        margin-top 4rem
        
    .cover
      margin 0 auto
      width 80%
      borderBox()
      .cc
        background-color rgba(black, 0.3)
      img
        width 100%
        
  section.intro
    .freehtml
      margin-left -3px
      margin-right -3px
      margin-bottom 3px
    .introc
      borderBox()
        
  section.video
    .video-player
      borderBox()
      // background-color rgba(#d7ecff, 0.2)
      margin 0 auto
      width 100%
      display flex

      .box
        background-color rgba(black, 0.3)
        width 100%
        padding-bottom 56.25%
        position relative
        height 0
        overflow hidden
        iframe
          position absolute
          top 0
          left 0
          width 100%
          height 100%
          
  .activity-runners
    display flex
    flex-wrap wrap
    justify-content center
    
    // .item.runner
    //   &:nth-child(2n+1)
    //     background-color rgba(mix(#e62e8b, white, 80%), 0.1)
    //   &:nth-child(2n)
    //     background-color rgba(mix(#24b3d1, white, 80%), 0.1)
  
  .activity-schedule
    borderBox()
    
    table
      margin-bottom 0
      color white
      background-color rgba(black, 0.4)
      font-size 14px
      th, td
        // border-color rgba($mainColor1, 0.2)
        border 0 none
      td
        box-sizing content-box
        height $imgw
        padding 6px
        line-height 21px
      th
        // color $greyTextColor
        padding 6px
        color $goldenColor
      td.applying
        line-height $imgw
        text-align center
        i.fa
          margin-right 0.5rem
        
      th.game
        padding-left 12px
      td.name
        .infobox
          display flex
          align-items center
          img
            width $imgw
            height $imgw
            border-radius 6px
          .info
            margin-left 6px
            .oname
              opacity 0.6
              font-size 14px
      td.start
        .date
          font-size 14px
          opacity 0.6
      td.rule
        .sub
          opacity 0.6
      td.video
        a.bilibili
          link()
          i.fa
            margin-right 3px
        .realtime
          opacity 0.6
    &.entry-form
      table
        td
          height auto
    
  .discuss
    text-align center
    a
      padding 1rem 1.5rem
      background-color rgba(white, 0.2)
      font-size 24px
      &:hover
        background-color rgba(white, 0.4)
      i
        margin-right 1rem