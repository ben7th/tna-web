section.activities
  a.item.activity
    position relative
    width 150px + 12px + 150px
    border-left solid 6px rgba($mainColor1, 0.6)
    padding 12px
    background-color rgba(white, 0.1)
    font-size 20px
    display block
    font-family $fontTitle
    margin-bottom 1rem
    &:hover
      background-color rgba(white, 0.2)
    .code
      margin-bottom 0.5rem
      border-bottom solid 1px rgba($mainColor1, 0.2)
    .name
    .date
      font-size 16px
      opacity 0.6
    .state
      position absolute
      top 8px
      right -1rem
      background-color #4b8bf5
      font-size 16px
      padding 4px 10px 0
      &.finished
        background-color #285077
        color rgba($mainColor1, 0.6)